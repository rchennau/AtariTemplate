{
    "tasks": [
        
            {
                "label": "build and run",
                "type": "shell",
                "command": "make",
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            },
            {
            "type": "cppbuild",
            "label": "cc65 build active file",
            "command": "/usr/local/bin/cc65",
            "args": [
                "-O",
                "-tatari",
                "-T",
                "-v",
                "--cpu",
                "6502",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.xex",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}